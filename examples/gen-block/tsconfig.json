{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "types": ["node"],
    "plugins": [
      {
        "name": "@effect/language-service",
        "namespaceImportPackages": [
          "effect",
          "@effect/*"
        ]
      }
    ]
  },
  "include": ["*.ts"]
}
